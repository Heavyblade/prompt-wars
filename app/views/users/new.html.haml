#clearance.sign-up{class: 'sign-in w-[300px] mx-auto justify-center'}
  .w-full.max-w-md.bg-white.p-6.space-y-6.dark:bg-gray-800
    %h2.text-2xl.font-bold.mb-4.dark:text-white.mb-10= t(".title")
    = form_for @user, html: { class: "space-y-6" } do |form|
      = render partial: '/users/form', object: form
      .submit-field
        = form.submit class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      .other-links
        = link_to t(".sign_in"), sign_in_path, class: "text-blue-700 hover:underline dark:text-blue-500"

