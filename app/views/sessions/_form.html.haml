= form_for :session, url: session_path, html: { class: "space-y-6" } do |form|
  .text-field
    = form.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300"
    = form.email_field :email, class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-700 dark:text-gray-300"
  .password-field
    = form.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300"
    = form.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm dark:bg-gray-700 dark:text-gray-300"
  .submit-field
    = form.submit class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-600"
  .other-links
    - if Clearance.configuration.allow_sign_up?
      = link_to t(".sign_up"), sign_up_path, class: "text-sm text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300"
    - if Clearance.configuration.allow_password_reset?
      = link_to t(".forgot_password"), new_password_path, class: "text-sm text-indigo-600 hover:text-indigo-500 dark:text-indigo-400 dark:hover:text-indigo-300"

