- content_for :title, "Departments"

%h1.text-2xl.font-semibold.mb-4.text-white Departments

%div.mb-4
  = link_to "New Department", new_admin_department_path, class: "px-3 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded"

.relative.overflow-x-auto.shadow-md.sm:rounded-lg
  %table.w-full.text-sm.text-left.text-gray-400.dark:text-gray-300
    %thead.text-xs.uppercase.bg-gray-50.dark:bg-gray-700.dark:text-gray-400
      %tr
        %th.px-6.py-3 Name
        %th.px-6.py-3 Manager
        %th.px-6.py-3 Actions
    %tbody
      - @departments.each do |d|
        %tr.border-b.dark:border-gray-700.odd:bg-white.odd:dark:bg-gray-900.even:bg-gray-50.even:dark:bg-gray-800
          %td.px-6.py-4.font-medium.text-gray-900.dark:text-white= d.name
          %td.px-6.py-4= d.manager&.full_name || d.manager&.email
          %td.px-6.py-4
            = link_to "Edit", edit_admin_department_path(d), class: "text-blue-400 hover:text-blue-300"
            = link_to "Delete", admin_department_path(d), data: { turbo_method: :delete, turbo_confirm: "Delete department?" }, class: "ml-2 text-red-400 hover:text-red-300"
