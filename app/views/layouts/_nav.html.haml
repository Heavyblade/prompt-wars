%nav.bg-gray-900.border-b.border-gray-800
  .max-w-screen-xl.mx-auto.p-4.flex.items-center.justify-between
    %a.flex.items-center.space-x-3.rtl:space-x-reverse{:href => root_path}
      %img.h-8{:alt => "Flowbite Logo", :src => "https://flowbite.com/docs/images/logo.svg"}/
      %span.self-center.text-2xl.font-semibold.whitespace-nowrap.text-gray-100.text-white Time Off Tracker
    #navbar
      %ul.flex.items-center.gap-6.text-gray-300
        %li
          = link_to "Home", root_path, class: "block py-2 px-3 hover:text-white"
        
        %li
          = link_to "My Requests", time_off_requests_path, class: "block py-2 px-3 hover:text-white"
        - if signed_in? && current_user.manager?
          %li
            = link_to "Team Requests", manager_time_off_requests_path, class: "block py-2 px-3 hover:text-white"
        - if signed_in? && current_user.admin?
          %li
            = link_to "All Requests", admin_time_off_requests_path, class: "block py-2 px-3 hover:text-white"
          %li
            = link_to "Users", admin_users_path, class: "block py-2 px-3 hover:text-white"
          %li
            = link_to "Departments", admin_departments_path, class: "block py-2 px-3 hover:text-white"
        - if signed_in?
          %li.flex.items-center.space-x-2
            %span= current_user.email.to_s.split("@").first
            - if current_user.role.present?
              %span.inline-block.rounded-full.text-xs.px-2.py-1.bg-gray-700.text-gray-200= current_user.role.to_s.humanize
          %li
            = button_to "Sign out", sign_out_path, method: :delete, class: "block py-2 px-3 text-gray-300 hover:text-white"
        - else
          %li
            = link_to "Sign in", sign_in_path, class: "block py-2 px-3 hover:text-white"
          %li
            = link_to "Sign Up", sign_up_path, class: "block py-2 px-3 hover:text-white"
